{
  "name": "hwp-mcp-server",
  "version": "1.0.0",
  "description": "Production-ready MCP server for reading and converting Korean HWP documents",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "hwp-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"docs/**/*.md\" \"README.md\"",
    "start:http": "node dist/index.js --http"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@ssabrojs/hwpxjs": "latest",
    "adm-zip": "^0.5.14",
    "cfb": "^1.2.2",
    "fast-xml-parser": "^4.3.5",
    "hwp.js": "^0.0.3",
    "iconv-lite": "^0.6.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "mcp",
    "hwp",
    "korean",
    "document",
    "converter"
  ],
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
